<h1>Listing documents</h1>

<form method="get">
	<%=text_field_tag "q", params[:q]%>
	<input type="submit" value="Search!">
</form>
<hr/>
<%=@results ? "#{@results} results" : "not searching, showing all docs"%>
<hr/>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%=h truncate(document.title) %></td>
    <td><%=h truncate(document.content) %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>